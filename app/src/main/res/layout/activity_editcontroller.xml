<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorWhite"
    android:id="@+id/popup_element_add">

    <include layout="@layout/toolbar"
        android:id="@+id/mytoolbar"/>

    <EditText
        android:id="@+id/etControllerName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/mytoolbar"
        android:hint="Controller Name"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etFirstDevice"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/etControllerName"
        android:hint="First Device Name"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etSecondDevice"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Second Device Name"
        android:layout_below="@+id/etFirstDevice"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSave"
        android:text="Save"
        android:background="@color/colorGreyLight"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/etSecondDevice"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_gravity=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>