<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/background"
    android:id="@+id/popup_element_edit">

    <AutoCompleteTextView
        android:id="@+id/actvControllerName"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/etControllerNumber"
        android:hint="Enter Controller Name"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <AutoCompleteTextView
        android:id="@+id/actvFirstDeviceName"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/etControllerNumber"
        android:hint="Enter First Device Name"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <AutoCompleteTextView
        android:id="@+id/actvSecondDeviceName"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/etControllerNumber"
        android:hint="Enter Second Device Name"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_width="match_parent"
        android:id="@+id/btnAddController"
        android:src="@drawable/login"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" />

</LinearLayout>